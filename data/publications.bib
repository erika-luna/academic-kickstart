	author = {Dirven, Martine and Perico, Rafael Echeverri and Sabalain, Cristina and Rodríguez, Adrián and Candia Baeza, David and Peña, Carolina and Faiguenbaum, Sergio},
	year = {2011},
}

@article{zuniga_tovar_vulnerability_2017,
