	author = {Dyer, George A and Hernández-Solano, Alan and Meza-Pale, Pablo and Robles-Berlanga, Héctor and Yúnez-Naude, Pablo and Robles-Berlanga, Héctor and Yúnez-Naude, Antonio and Alimentación Sustentable, Desarrollo},
	year = {2018},
	keywords = {Mexico, CONEVAL, corn, Results based management, SAGARPA},
