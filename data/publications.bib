	pages = {11707--11735},
	file = {Van Der Werf et al_2010_Global fire emissions and the contribution of deforestation, savanna, forest,.pdf:/Users/erikaluna/MEGAsync/Zotero/Van Der Werf et al_2010_Global fire emissions and the contribution of deforestation, savanna, forest,2.pdf:application/pdf},
}

