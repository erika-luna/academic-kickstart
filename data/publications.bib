	journal = {Annals of the New York Academy of Sciences},
	author = {Kremen, Claire},
	year = {2015},
	note = {\_eprint: https://nyaspubs.onlinelibrary.wiley.com/doi/pdf/10.1111/nyas.12845},
	keywords = {agroecology, food sovereignty, agricultural intensification, population persistence, trade-off},
	pages = {52--76},
